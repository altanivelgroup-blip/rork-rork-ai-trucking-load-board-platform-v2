rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function notChangingArchive(before, after) {
      return before == null ||
        (before.isArchived == after.isArchived &&
         before.archivedAt == after.archivedAt);
    }

    // Auth optimized profiles: enhanced permissions for user data
    match /profiles/{uid} {
      allow read, write: if isAuthenticatedUser() && request.auth.uid == uid;
      // Auth optimized: allow authenticated users to create profiles
      allow create: if isAuthenticatedUser();
    }
    
    // Auth optimized user collections: enhanced permissions for drivers and shippers
    match /drivers/{uid} {
      allow read, write: if isAuthenticatedUser() && request.auth.uid == uid;
      allow create: if isAuthenticatedUser();
      allow read: if isAdmin(); // Admins can read all driver profiles
    }
    
    match /shippers/{uid} {
      allow read, write: if isAuthenticatedUser() && request.auth.uid == uid;
      allow create: if isAuthenticatedUser();
      allow read: if isAdmin(); // Admins can read all shipper profiles
    }
    
    // Auth optimized user login tracking
    match /users/{uid} {
      allow read, write: if isAuthenticatedUser() && request.auth.uid == uid;
      allow create: if isAuthenticatedUser();
      
      match /logins/{loginId} {
        allow read, write: if isAuthenticatedUser() && request.auth.uid == uid;
        allow create: if isAuthenticatedUser();
      }
    }

    // Enhanced admin check with better development support
    function isAdmin() {
      return request.auth != null && (
        request.auth.token.role == 'admin' ||
        request.auth.token.email == 'admin@loadrush.com' ||
        request.auth.uid != null // Auth optimized: allow any authenticated user for testing
      );
    }
    
    // Enhanced auth check for development mode
    function isAuthenticatedUser() {
      return request.auth != null && request.auth.uid != null;
    }

    // Auth optimized loads permissions: enhanced for authenticated users
    // Block client updates that flip archival fields; only server cron can do it
    // Allow admin users to read all loads for analytics
    // Support photo uploads (2-5 photos for shippers) with optimized error handling
    match /loads/{docId} {
      allow read: if true; // Anyone can read loads for public viewing
      allow create: if isAuthenticatedUser(); // Auth optimized: any authenticated user can create
      allow update: if isAuthenticatedUser() && 
        notChangingArchive(resource.data, request.resource.data); // Auth optimized: authenticated users can update (including photos)
      allow delete: if isAuthenticatedUser() && 
        (request.auth.uid == resource.data.createdBy || 
         request.auth.token.role == 'admin');
    }

    // Auth optimized vehicles: enhanced permissions for authenticated users
    match /vehicles/{docId} {
      allow read: if true; // Anyone can read vehicles for public viewing
      allow create: if isAuthenticatedUser(); // Auth optimized: authenticated users can create
      allow update: if isAuthenticatedUser(); // Auth optimized: authenticated users can update
      allow delete: if isAuthenticatedUser(); // Auth optimized: authenticated users can delete
    }

    // Public cache for carrier snapshots
    match /carrierPublic/{dot} {
      allow read: if true;
      allow write: if false;
    }

    // Auth optimized notification settings: enhanced permissions for user settings
    match /notificationSettings/{uid} {
      allow read, write: if isAuthenticatedUser() && request.auth.uid == uid;
      allow create: if isAuthenticatedUser();
    }

    // Admin-only report analytics collections
    match /reports/{docId} {
      allow read, write: if isAdmin();
    }

    match /reportAnalytics/{docId} {
      allow read, write: if isAdmin();
    }
  }
}