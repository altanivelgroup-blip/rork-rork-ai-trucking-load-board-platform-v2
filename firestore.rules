// CROSS-PLATFORM LOAD SHARING: Enhanced Firestore rules for universal load access
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function notChangingArchive(before, after) {
      return before == null ||
        (before.isArchived == after.isArchived &&
         before.archivedAt == after.archivedAt);
    }

    function isAdmin() {
      return request.auth != null && (
        request.auth.token.role == 'admin' ||
        request.auth.token.email == 'admin@loadrush.com' ||
        request.auth.token.admin == true
      );
    }
    
    function isAuthenticatedUser() {
      return request.auth != null && request.auth.uid != null;
    }
    
    function isValidUser() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticatedUser() && request.auth.uid == userId;
    }

    // ✅ CROSS-PLATFORM: User profiles accessible across all platforms
    match /profiles/{uid} {
      allow read: if true; // Public read for cross-platform compatibility
      allow write: if isAuthenticatedUser();
      allow create: if isAuthenticatedUser();
    }
    
    match /drivers/{uid} {
      allow read: if true; // Public read for cross-platform compatibility
      allow write: if isAuthenticatedUser();
      allow create: if isAuthenticatedUser();
    }
    
    match /shippers/{uid} {
      allow read: if true; // Public read for cross-platform compatibility
      allow write: if isAuthenticatedUser();
      allow create: if isAuthenticatedUser();
    }
    
    match /users/{uid} {
      allow read: if true; // Public read for cross-platform compatibility
      allow write: if isAuthenticatedUser();
      allow create: if isAuthenticatedUser();
      
      match /logins/{loginId} {
        allow read, write, create: if isAuthenticatedUser();
      }
      
      match /settings/{settingId} {
        allow read, write, create: if isAuthenticatedUser();
      }
    }

    // ✅ CROSS-PLATFORM: Loads collection with universal access for all platforms
    match /loads/{docId} {
      allow read: if true; // Public read - loads visible across all platforms
      allow create: if isAuthenticatedUser(); // Any authenticated user can post loads
      allow update: if isAuthenticatedUser(); // Any authenticated user can update loads
      allow delete: if isAuthenticatedUser(); // Any authenticated user can delete loads
    }

    // ✅ CROSS-PLATFORM: Bulk import session metadata with full access
    match /bulkImports/{docId} {
      allow read: if true; // Public read for cross-platform compatibility
      allow write, create: if isAuthenticatedUser();
    }

    // ✅ CROSS-PLATFORM: Board and history collections with universal access
    match /board/{docId} {
      allow read: if true; // Public read - board visible across all platforms
      allow write, create: if isAuthenticatedUser();
    }

    match /boards/{docId} {
      allow read: if true; // Public read - boards visible across all platforms
      allow write, create: if isAuthenticatedUser();
    }

    match /history/{docId} {
      allow read: if true; // Public read - history visible across all platforms
      allow write, create: if isAuthenticatedUser();
    }

    match /posts/{docId} {
      allow read: if true; // Public read - posts visible across all platforms
      allow write, create: if isAuthenticatedUser();
    }

    match /myLoads/{docId} {
      allow read: if true; // Public read - loads visible across all platforms
      allow write, create: if isAuthenticatedUser();
    }

    // ✅ CROSS-PLATFORM: Vehicle management with universal access
    match /vehicles/{docId} {
      allow read: if true; // Public read - vehicles visible across all platforms
      allow create, update, delete: if isAuthenticatedUser();
    }

    // ✅ CROSS-PLATFORM: Carrier public data (read-only)
    match /carrierPublic/{dot} {
      allow read: if true;
      allow write: if false;
    }

    // ✅ CROSS-PLATFORM: Notification settings with universal access
    match /notificationSettings/{uid} {
      allow read: if true; // Public read for cross-platform compatibility
      allow write, create: if isAuthenticatedUser();
    }
    
    match /users/{userId}/settings/notifications {
      allow read: if true; // Public read for cross-platform compatibility
      allow write, create: if isAuthenticatedUser();
    }

    // ✅ CROSS-PLATFORM: Reports and analytics with admin access
    match /reports/{docId} {
      allow read: if true; // Public read for transparency
      allow write, create: if isAdmin();
    }

    match /reportAnalytics/{docId} {
      allow read: if true; // Public read for transparency
      allow write, create: if isAdmin();
    }

    // ✅ CROSS-PLATFORM: Photo management with universal access
    match /photos/{photoId} {
      allow read: if true; // Public read - photos visible across all platforms
      allow create, update, delete: if isAuthenticatedUser();
    }
    
    match /loadPhotos/{userId}/{loadId}/metadata/{photoId} {
      allow read: if true; // Public read - photo metadata visible across all platforms
      allow write, create: if isAuthenticatedUser();
    }

    // ✅ CROSS-PLATFORM: Transaction management with universal access
    match /transactions/{transactionId} {
      allow read: if true; // Public read for transparency
      allow create, update: if isAuthenticatedUser();
      allow delete: if isAdmin();
    }

    match /adminTransactions/{transactionId} {
      allow read: if true; // Public read for transparency
      allow write, create: if isAdmin();
    }

    // ✅ CROSS-PLATFORM: Universal catch-all rule for maximum compatibility
    match /{document=**} {
      allow read: if true; // Public read - all data visible across all platforms
      allow write, create: if isAuthenticatedUser(); // Any authenticated user can write
    }
  }
}