rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function notChangingArchive(before, after) {
      return before == null ||
        (before.isArchived == after.isArchived &&
         before.archivedAt == after.archivedAt);
    }

    // Each user can read/write only their own profile
    match /profiles/{uid} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
      // Allow anonymous users to create profiles for testing
      allow create: if request.auth != null;
    }

    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && (
        request.auth.token.role == 'admin' ||
        request.auth.token.email == 'admin@loadrush.com' ||
        request.auth.uid != null // Temporary: allow any authenticated user for testing
      );
    }

    // Enhanced loads permissions: allow authenticated users to read and write
    // Block client updates that flip archival fields; only server cron can do it
    // Allow admin users to read all loads for analytics
    // Support photo uploads (2-5 photos for shippers) with better error handling
    match /loads/{docId} {
      allow read: if true; // Anyone can read loads for public viewing
      allow create: if request.auth != null; // Any authenticated user can create
      allow update: if request.auth != null && 
        notChangingArchive(resource.data, request.resource.data); // Any authenticated user can update (including photos)
      allow delete: if request.auth != null && 
        (request.auth.uid == resource.data.createdBy || 
         request.auth.token.role == 'admin');
    }

    // Vehicles: align with loads for now (auth users can read/write)
    match /vehicles/{docId} {
      allow read: if true; // Anyone can read vehicles
      allow create: if request.auth != null; // Any authenticated user (including anonymous) can create
      allow update: if request.auth != null;
      allow delete: if request.auth != null;
      // Allow anonymous users to read for testing
      allow read: if request.auth == null || request.auth.uid != null;
    }

    // Public cache for carrier snapshots
    match /carrierPublic/{dot} {
      allow read: if true;
      allow write: if false;
    }

    // Admin-only report analytics collections
    match /reports/{docId} {
      allow read, write: if isAdmin();
    }

    match /reportAnalytics/{docId} {
      allow read, write: if isAdmin();
    }
  }
}