rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Each user can read/write only their own profile
    match /profiles/{uid} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }

    // Loads: allow authenticated users (including anonymous) to read and write
    // This is more permissive for development - tighten in production
    match /loads/{docId} {
      allow read: if true; // Anyone can read loads
      allow write: if request.auth != null; // Any authenticated user (including anonymous) can write
    }

    // Public cache for carrier snapshots
    match /carrierPublic/{dot} {
      allow read: if true;
      allow write: if false;
    }
  }
}