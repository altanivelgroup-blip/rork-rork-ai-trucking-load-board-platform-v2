// CROSS-PLATFORM PHOTO SHARING: Universal storage rules for all platforms
rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper function for authentication
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return request.auth != null
        && (request.auth.token.admin == true || request.auth.token.role == 'admin');
    }

    // ✅ CROSS-PLATFORM: Load photos accessible across all platforms
    match /loadPhotos/{userId}/{loadId}/{fileName} {
      allow read: if true; // Public read - photos visible across all platforms
      allow write, create, update, delete: if isAuthenticated();
    }

    // ✅ CROSS-PLATFORM: Vehicle photos accessible across all platforms
    match /vehiclePhotos/{userId}/{vehicleId}/{fileName} {
      allow read: if true; // Public read - photos visible across all platforms
      allow write, create, update, delete: if isAuthenticated();
    }
    
    // ✅ CROSS-PLATFORM: Generic photo paths accessible across all platforms
    match /photos/{userId}/{photoId} {
      allow read: if true; // Public read - photos visible across all platforms
      allow write, create, update, delete: if isAuthenticated();
    }
    
    // ✅ CROSS-PLATFORM: User-specific paths accessible across all platforms
    match /users/{userId}/photos/{allPaths=**} {
      allow read: if true; // Public read - photos visible across all platforms
      allow write, create, update, delete: if isAuthenticated();
    }
    
    // ✅ CROSS-PLATFORM: Universal fallback for maximum compatibility
    match /{allPaths=**} {
      allow read: if true; // Public read - all files visible across all platforms
      allow write, create, update, delete: if isAuthenticated();
    }
  }
}