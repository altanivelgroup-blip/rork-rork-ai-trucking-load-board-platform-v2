rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function isAdmin() {
      return request.auth != null
        && (request.auth.token.admin == true || request.auth.token.role == 'admin');
    }
    
    function isAuthenticated() {
      return request.auth != null && request.auth.uid != null;
    }
    
    function isOwnerOrAuthenticated(userId) {
      return request.auth != null && (request.auth.uid == userId || request.auth.uid != null);
    }
    
    // FIXED: More permissive photo upload rules for authenticated users
    // Allow any authenticated user to upload photos to any path under loadPhotos
    match /loadPhotos/{allPaths=**} {
      allow read: if true; // Anyone can read photos for public load viewing
      allow write: if isAuthenticated(); // Any authenticated user can upload
      allow update: if isAuthenticated(); // Any authenticated user can update
      allow delete: if isAuthenticated(); // Any authenticated user can delete
    }
    
    // FIXED: More permissive vehicle photo rules
    match /vehiclePhotos/{allPaths=**} {
      allow read: if true; // Anyone can read photos
      allow write: if isAuthenticated(); // Any authenticated user can upload
      allow update: if isAuthenticated(); // Any authenticated user can update
      allow delete: if isAuthenticated(); // Any authenticated user can delete
    }
    
    // FIXED: Broader fallback for any photo-related paths
    match /{allPaths=**} {
      allow read: if true;
      allow write: if isAuthenticated() && 
        (allPaths.matches('.*[Pp]hotos/.*') || allPaths.matches('.*[Ii]mages/.*') || allPaths.matches('.*uploads/.*'));
    }
    
    // Admin-only report files
    match /reports/{allPaths=**} { allow read, write: if isAdmin(); }
    match /reportAnalytics/{allPaths=**} { allow read, write: if isAdmin(); }
  }
}