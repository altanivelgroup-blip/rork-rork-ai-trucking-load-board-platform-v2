// COMPREHENSIVE STORAGE RULES - Fixed for all authenticated users
rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null && request.auth.uid != null;
    }
    
    function isAdmin() {
      return request.auth != null
        && (request.auth.token.admin == true || request.auth.token.role == 'admin');
    }

    // CRITICAL FIX: Load photos - comprehensive permissions for all authenticated users
    match /loadPhotos/{userId}/{loadId}/{fileName} {
      allow read: if true; // Public read access for photo viewing
      allow write, create, update, delete: if isAuthenticated() && request.auth.uid == userId;
    }

    // CRITICAL FIX: Vehicle photos - comprehensive permissions for all authenticated users
    match /vehiclePhotos/{userId}/{vehicleId}/{fileName} {
      allow read: if true; // Public read access for photo viewing
      allow write, create, update, delete: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // CRITICAL FIX: Generic photo paths for maximum compatibility
    match /photos/{userId}/{photoId} {
      allow read: if true; // Public read access
      allow write, create, update, delete: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // CRITICAL FIX: User-specific paths with wildcard support
    match /users/{userId}/photos/{allPaths=**} {
      allow read: if true; // Public read access
      allow write, create, update, delete: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // CRITICAL FIX: Comprehensive fallback for any photo-related paths
    match /{allPaths=**} {
      allow read: if true; // Allow all reads to prevent fetch failures
      allow write, create, update, delete: if isAuthenticated() && 
        (allPaths.matches('.*Photos/.*') || 
         allPaths.matches('.*photos/.*') || 
         allPaths.matches('.*images/.*') ||
         allPaths.matches('.*Pictures/.*') ||
         allPaths.matches('.*uploads/.*'));
    }

    // Admin-only report files
    match /reports/{allPaths=**} { 
      allow read, write, create, update, delete: if isAdmin(); 
    }
    
    match /reportAnalytics/{allPaths=**} { 
      allow read, write, create, update, delete: if isAdmin(); 
    }
  }
}