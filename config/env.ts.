// config/env.ts
const need = (k: string) => {
  const v = process.env[k as keyof typeof process.env] as string | undefined;
  if (!v) console.warn(`[env] Missing ${k}`);
  return v ?? "";
};

export const RORK_API_BASE = need("EXPO_PUBLIC_RORK_API_BASE_URL");
export const MAPBOX_TOKEN  = need("EXPO_PUBLIC_MAPBOX_TOKEN");
export const ORS_KEY       = need("EXPO_PUBLIC_ORS_API_KEY");
export const EIA_KEY       = need("EXPO_PUBLIC_EIA_API_KEY");
export const OPENWX_KEY    = need("EXPO_PUBLIC_OPENWEATHER_API_KEY");
